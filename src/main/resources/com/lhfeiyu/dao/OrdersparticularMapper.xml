<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhfeiyu.dao.OrdersparticularMapper">
	<resultMap id="BaseResultMap" type="com.lhfeiyu.po.Ordersparticular">
		<id column="ordersParticularId" property="ordersparticularid"
			jdbcType="INTEGER" />
		<result column="ordersId" property="ordersid" jdbcType="INTEGER" />
		<result column="ordersNo" property="ordersno" jdbcType="VARCHAR" />
		<result column="productName" property="productname" jdbcType="VARCHAR" />
		<result column="productId" property="productid" jdbcType="INTEGER" />
		<result column="SIZE" property="size" jdbcType="VARCHAR" />
		<result column="num" property="num" jdbcType="INTEGER" />
		<result column="munUnit" property="mununit" jdbcType="VARCHAR" />
		<result column="createProduct" property="createproduct"
			jdbcType="VARCHAR" />
		<result column="productTypeId" property="producttypeid"
			jdbcType="VARCHAR" />
		<result column="supplierId" property="supplierid" jdbcType="INTEGER" />
	</resultMap>
	<sql id="baseColum">
		ordersno,
		productname,
		productid,
		size,
		num,
		mununit,
		createproduct,
		producttypeid,
		supplierid,
		orders_id
	</sql>

	<insert id="addOrdersDetails" parameterType="java.util.Map">
		insert into ordersparticular (
		<include refid="baseColum" />
		)values(
		#{ordersno},
		#{productname},
		#{productid},
		#{size},
		#{num},
		#{mununit},
		#{createproduct},
		#{producttypeid},
		#{supplierid},
		#{orders_id})
	</insert>

	<sql id="updateSuffix">
		<if test="productname != null and productname != ''">productname=#{productname}</if>
		<if test="productid != null and productid != null">productid=#{productid}</if>
		<if test="producttypeid != null and producttypeid != ''">producttypeid=#{producttypeid}</if>
		<if test="size != null and size != ''">size=#{size}</if>
		<if test="num != null and num != ''">num=#{num}</if>
		<if test="mununit != null and mununit! = ''">mununit=#{mununit}</if>
		<if test="createproduct != null and createproduct != ''">createproduct=#{createproduct}</if>
		<if test="supplierid!=null and supplierid!= ''">supplierid=#{supplierid}</if>
	</sql>

	<update id="updateOrdersDetails" parameterType="java.util.Map">
		update
		ordersparticular set <include refid="updateSuffix" /> where ordersparticularid = #{ordersparticularid}
	</update>

	<delete id="deleteOrdersDetails" parameterType="java.lang.Integer">
		delete from ordersparticular where ordersparticularid=#{id}
	</delete>
	
	
	
</mapper>